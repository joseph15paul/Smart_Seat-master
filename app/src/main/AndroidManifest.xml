        android:icon="@drawable/chair2"
        android:label="Smart Seat"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.smart_seat.seat.SplashScreen"
            android:label="Smart Seat" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.smart_seat.seat.DeviceList"
            android:label="Smart Seat">

